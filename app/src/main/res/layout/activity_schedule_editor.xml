<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editor.ScheduleEditorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/img_prev_week"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?actionBarItemBackground"
                android:padding="14dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_week_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Day 05-11/09/2020" />

            <ImageView
                android:id="@+id/img_next_week"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?actionBarItemBackground"
                android:padding="14dp"
                android:src="@drawable/ic_next" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_trash"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:src="@drawable/ic_trash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tbl_schedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="List of lesson name"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tbl_lesson"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tbl_lesson"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/action_bar" />

    <Button
        android:id="@+id/btn_edit_lesson"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_pressable_gray_corner8"
        android:text="Edit lesson name"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/tbl_lesson"
        app:layout_constraintStart_toStartOf="@id/tbl_lesson"
        app:layout_constraintTop_toBottomOf="@id/tbl_lesson" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_pressable_gray_corner8"
        android:text="Ok"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"
        app:layout_constraintStart_toStartOf="@id/tbl_lesson"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_lesson" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_pressable_gray_corner8"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/tbl_lesson"
        app:layout_constraintStart_toEndOf="@id/btn_ok"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_lesson" />

</androidx.constraintlayout.widget.ConstraintLayout>